{% extends 'base.html.twig' %}

{% block title %}Film index{% endblock %}

{% block body %}
    <h1>Film index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Duree</th>
                <th>Resume</th>
                <th>TitreOriginal</th>
                <th>Affiche</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for film in films %}
            <tr>
                <td>{{ film.id }}</td>
                <td>{{ film.titre }}</td>
                <td>{{ film.duree }}</td>
                <td>{{ film.resume }}</td>
                <td>{{ film.titreOriginal }}</td>
                <td>{% if(film.affiche) %}
                        <img src="{{ asset(film.affiche) }}" alt="Photo de profil" width="150px" class="img-fluid">
                    {% else %}
                        <img src="{{ asset('default_imageProfil.png') }}" alt="Photo de profil" width="150px" class="img-fluid">
                    {% endif %}</td>
                <td>
                    <a href="{{ path('film_show', {'id': film.id}) }}">show</a>
                    <a href="{{ path('film_edit', {'id': film.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('film_new') }}">Create new</a>
{% endblock %}
