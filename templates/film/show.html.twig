{% extends 'base.html.twig' %}

{% block title %}Film{% endblock %}

{% block body %}
    <h1>Film</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ film.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ film.titre }}</td>
            </tr>
            <tr>
                <th>Duree</th>
                <td>{{ film.duree }}</td>
            </tr>
            <tr>
                <th>Resume</th>
                <td>{{ film.resume }}</td>
            </tr>
            <tr>
                <th>TitreOriginal</th>
                <td>{{ film.titreOriginal }}</td>
            </tr>
            <tr>
                <th>Affiche</th>
                <td>{% if(film.affiche) %}
                        <img src="{{ asset(film.affiche) }}" alt="Photo de profil" width="150px" class="img-fluid">
                    {% else %}
                        <img src="{{ asset('default_imageProfil.png') }}" alt="Photo de profil" width="150px" class="img-fluid">
                    {% endif %}</td>
            </tr>
            <tr>
                <th>Genre</th>
                <td>
                    {% for genre in film.genres %}
                        {{ genre.libelle }}<br>
                    {% endfor %}
                </td>

            </tr>
            <tr>
                <th>Nationalit√©</th>
                <td>
                    {% for nationalite in film.nationalites %}
                        {{ nationalite.libelle }}<br>
                    {% endfor %}
                </td>

            </tr>
        </tbody>
    </table>

    <a href="{{ path('film_index') }}">back to list</a>

    <a href="{{ path('film_edit', {'id': film.id}) }}">edit</a>

    {{ include('film/_delete_form.html.twig') }}
{% endblock %}
